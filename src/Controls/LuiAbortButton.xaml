<Button
    x:Class="leonardo.Controls.LuiAbortButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attached="clr-namespace:leonardo.AttachedProperties"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="40"
    Height="28"
    HorizontalContentAlignment="Center"
    attached:ThemeProperties.ButtonScheme="Error"
    attached:ThemeProperties.IconLeft="lui_icon_cross"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontSize="16"
    FontWeight="Normal"
    mc:Ignorable="d">
    <Button.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/LuiButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Button.Resources>
    <Button.Style>
        <Style
            BasedOn="{StaticResource LuiButtonStyle}"
            TargetType="Button" />
    </Button.Style>
</Button>
