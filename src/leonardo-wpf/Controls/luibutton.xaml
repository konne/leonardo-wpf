<UserControl
    x:Class="leonardo.Controls.LuiButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:leonardo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <!--<ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/palette.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>-->
    </UserControl.Resources>
    <UserControl.Template>
        <ControlTemplate>
            <Button
                Name="MainButton"
                Cursor="Hand"
                Foreground="#4D4D4D"
                LostFocus="MainButton_LostFocus"
                PreviewMouseLeftButtonUp="MainButton_MouseUp">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        Name="PART_Border"
                                        Padding="15,2,15,2"
                                        BorderThickness="1"
                                        CornerRadius="3"
                                        MouseDown="MainButton_MouseDown">
                                        <!--<Border.Resources>
                                            <Storyboard x:Key="sbFadeIn">
                                                <ColorAnimation
                                                    Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                    From="#E6E6E6"
                                                    To="White"
                                                    Duration="0:0:1" />
                                            </Storyboard>
                                        </Border.Resources>
                                        <Border.Triggers>
                                            <EventTrigger RoutedEvent="Border.MouseEnter">
                                                <BeginStoryboard Storyboard="{StaticResource sbFadeIn}" />
                                            </EventTrigger>
                                        </Border.Triggers>-->
                                        <Grid MouseEnter="MainButton_MouseEnter" MouseLeave="MainButton_MouseLeave">
                                            <controls:LuiIcon
                                                x:Name="PART_IconLeft"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                IconSize="Normal" />
                                            <controls:LuiIcon
                                                x:Name="PART_IconRight"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                IconSize="Normal" />
                                            <TextBlock
                                                x:Name="PART_Text"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                FontWeight="Bold" />
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
