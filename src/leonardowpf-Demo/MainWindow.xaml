                                ButtonText="Add Item"
                                IconLeft="ui_icon_plus"
                                IconRight="lui_icon_none" />
                            <controls:LuiButton
                                Margin="3"
                                ButtonText="Add Item"
                                IconLeft="lui_icon_none"
                                IconRight="ui_icon_plus"
                                Rounded="True" />
                        </StackPanel>
                    </TabItem>
                    <TabItem
                        Header="Inverse">
                        <StackPanel
                            Background="{StaticResource LUI.Brush.Grayscale28}">
                            <controls:LuiButton
                                Margin="3"
                                ButtonText="Add Item"
                                IconLeft="lui_icon_none"
                                IconRight="lui_icon_none"
                                Inverse="True" />
                            <controls:LuiButton
                                Margin="3"
                                ButtonText="Add Item"
                                IconLeft="ui_icon_plus"
                                IconRight="lui_icon_none"
                                Inverse="True" />
                            <controls:LuiButton
                                Margin="3"
                                ButtonText="Add Item"
                                IconLeft="lui_icon_none"
                                IconRight="ui_icon_plus"
                                Inverse="True"
                                Rounded="True" />
                        </StackPanel>
                    </TabItem>
                </TabControl>
                <StackPanel
                    Orientation="Horizontal">
                    <controls:LuiButton
                        Margin="3"
                        ButtonText="Default"
                        IconLeft="lui_icon_none"
                        IconRight="lui_icon_none"
                        LUIButtonSize="Default" />
                    <controls:LuiButton
                        Margin="3"
                        ButtonText="Large"
                        IconLeft="lui_icon_none"
                        IconRight="lui_icon_none"
                        LUIButtonSize="Large" />
                    <controls:LuiButton
                        Margin="3"
                        ButtonText="Extra Large"
                        IconLeft="lui_icon_none"
                        IconRight="lui_icon_none"
                        LUIButtonSize="ExtraLarge" />
                </StackPanel>
            </StackPanel>
        </TabItem>
        <TabItem
            Header="ButtonGroup">
            <StackPanel>
                <TabControl
                    ItemContainerStyle="{StaticResource LUITabItemStyle}">
                    <TabItem
                        Header="Default">
                        <StackPanel>
                            <controls:LuiControlGroup
                                Margin="3,15,3,15">
                                <controls:LuiButton
                                    ButtonText="First Button" />
                                <controls:LuiButton
                                    ButtonText="Second Button" />
                                <controls:LuiButton
                                    ButtonText="Third Button" />
                            </controls:LuiControlGroup>
                        </StackPanel>
                    </TabItem>
                    <TabItem
                        Header="Inverse">
                        <StackPanel
                            Background="{StaticResource LUI.Brush.Grayscale28}">
                            <controls:LuiControlGroup
                                Margin="3,15,3,15">
                                <controls:LuiButton
                                    ButtonText="First Button"
                                    Inverse="True" />
                                <controls:LuiButton
                                    ButtonText="Second Button"
                                    Inverse="True" />
                                <controls:LuiButton
                                    ButtonText="Third Button"
                                    Inverse="True" />
                            </controls:LuiControlGroup>
                        </StackPanel>
                    </TabItem>
                </TabControl>

                <TabControl
                    ItemContainerStyle="{StaticResource LUITabItemStyle}">
                    <TabItem
                        Header="Default">
                        <StackPanel>
                            <controls:LuiControlGroup
                                Margin="3,15,3,15"
                                Rounded="True">
                                <controls:LuiButton
