<Window
    x:Class="leonardowpf_Demo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attached="clr-namespace:leonardo.AttachedProperties;assembly=leonardo-wpf"
    xmlns:controls="clr-namespace:leonardo.Controls;assembly=leonardo-wpf"
    xmlns:converter="clr-namespace:leonardo.Converter;assembly=leonardo-wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:leonardowpf_Demo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="650"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/leonardo-wpf;component/Styles/LUIStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <TabControl
        ItemContainerStyle="{StaticResource LUITabItemStyle}"
        TabStripPlacement="Left">
        <TabItem Header="Icons">
            <StackPanel Orientation="Horizontal">

                <controls:LuiIcon
                    Margin="4"
                    Icon="lui_icon_table"
                    IconSize="Large" />
                <controls:LuiIcon
                    Margin="4"
                    Icon="lui_icon_menu"
                    IconSize="Large" />
                <controls:LuiIcon
                    Margin="4"
                    Icon="lui_icon_triangle_bottom"
                    IconSize="Large" />
                <controls:LuiIcon
                    Margin="4"
                    Icon="lui_icon_table"
                    IconSize="Large" />
                <controls:LuiIcon
                    Margin="4"
                    Icon="lui_icon_calendar"
                    IconSize="Large" />
                <controls:LuiIcon
                    Margin="4"
                    Icon="lui_icon_triangle_bottom"
                    IconSize="Large" />
                <controls:LuiIcon
                    Margin="4"
                    Icon="lui_icon_triangle_right"
                    IconSize="Large" />
            </StackPanel>
        </TabItem>
        <TabItem Header="Button">
            <StackPanel>
                <TabControl ItemContainerStyle="{StaticResource LUITabItemStyle}">
                    <TabItem Header="Default">
                        <StackPanel Orientation="Horizontal">
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Default"
                                attached:ThemeProperties.IconLeft="lui_icon_none"
                                attached:ThemeProperties.IconRight="lui_icon_none"
                                Content="Default" />
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Toolbar"
                                attached:ThemeProperties.IconLeft="lui_icon_none"
                                attached:ThemeProperties.IconRight="lui_icon_none"
                                Content="Toolbar" />
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Info"
                                attached:ThemeProperties.IconLeft="lui_icon_none"
                                attached:ThemeProperties.IconRight="lui_icon_none"
                                Content="Info" />
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Error"
                                attached:ThemeProperties.IconLeft="lui_icon_none"
                                attached:ThemeProperties.IconRight="lui_icon_none"
                                Content="Error" />
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Warning"
                                attached:ThemeProperties.IconLeft="lui_icon_none"
                                attached:ThemeProperties.IconRight="lui_icon_none"
                                Content="Warning" />
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Success"
                                attached:ThemeProperties.IconLeft="lui_icon_none"
                                attached:ThemeProperties.IconRight="lui_icon_none"
                                Content="Success" />
                        </StackPanel>
                    </TabItem>
                    <TabItem
                        BorderBrush="{StaticResource LUI.Brush.Grayscale28}"
                        BorderThickness="0"
                        Header="Inverse">
                        <StackPanel
                            Background="{StaticResource LUI.Brush.Grayscale28}"
                            Orientation="Horizontal">
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Default"
                                attached:ThemeProperties.IconLeft="lui_icon_none"
                                attached:ThemeProperties.IconRight="lui_icon_none"
                                attached:ThemeProperties.Inverted="True"
                                Content="Default" />
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Toolbar"
                                attached:ThemeProperties.IconLeft="lui_icon_none"
                                attached:ThemeProperties.IconRight="lui_icon_none"
                                attached:ThemeProperties.Inverted="True"
                                Content="Toolbar" />
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Info"
                                attached:ThemeProperties.IconLeft="lui_icon_none"
                                attached:ThemeProperties.IconRight="lui_icon_none"
                                attached:ThemeProperties.Inverted="True"
                                Content="Info" />
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Error"
                                attached:ThemeProperties.IconLeft="lui_icon_none"
                                attached:ThemeProperties.IconRight="lui_icon_none"
                                attached:ThemeProperties.Inverted="True"
                                Content="Error" />
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Warning"
                                attached:ThemeProperties.IconLeft="lui_icon_none"
                                attached:ThemeProperties.IconRight="lui_icon_none"
                                attached:ThemeProperties.Inverted="True"
                                Content="Warning" />
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Success"
                                attached:ThemeProperties.IconLeft="lui_icon_none"
                                attached:ThemeProperties.IconRight="lui_icon_none"
                                attached:ThemeProperties.Inverted="True"
                                Content="Success" />
                        </StackPanel>
                    </TabItem>
                </TabControl>

                <TabControl ItemContainerStyle="{StaticResource LUITabItemStyle}">
                    <TabItem Header="Default">
                        <StackPanel Orientation="Horizontal">
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Default"
                                attached:ThemeProperties.Rounded="True"
                                Content="Default" />
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Toolbar"
                                attached:ThemeProperties.Rounded="True"
                                Content="Toolbar" />
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Info"
                                attached:ThemeProperties.Rounded="True"
                                Content="Info" />
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Error"
                                attached:ThemeProperties.Rounded="True"
                                Content="Error" />
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Warning"
                                attached:ThemeProperties.Rounded="True"
                                Content="Warning" />
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Success"
                                attached:ThemeProperties.Rounded="True"
                                Content="Success" />
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Inverse">
                        <StackPanel
                            Background="{StaticResource LUI.Brush.Grayscale28}"
                            Orientation="Horizontal">
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Default"
                                attached:ThemeProperties.Inverted="True"
                                attached:ThemeProperties.Rounded="True"
                                Content="Default" />
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Toolbar"
                                attached:ThemeProperties.Inverted="True"
                                attached:ThemeProperties.Rounded="True"
                                Content="Toolbar" />
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Info"
                                attached:ThemeProperties.Inverted="True"
                                attached:ThemeProperties.Rounded="True"
                                Content="Info" />
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Error"
                                attached:ThemeProperties.Inverted="True"
                                attached:ThemeProperties.Rounded="True"
                                Content="Error" />
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Warning"
                                attached:ThemeProperties.Inverted="True"
                                attached:ThemeProperties.Rounded="True"
                                Content="Warning" />
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Success"
                                attached:ThemeProperties.Inverted="True"
                                attached:ThemeProperties.Rounded="True"
                                Content="Success" />
                        </StackPanel>
                    </TabItem>
                </TabControl>
                <TabControl ItemContainerStyle="{StaticResource LUITabItemStyle}">
                    <TabItem Header="Default">
                        <StackPanel Orientation="Horizontal">
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Default"
                                attached:ThemeProperties.IconLeft="ui_icon_plus"
                                attached:ThemeProperties.IconRight="lui_icon_none" />
                            <controls:LuiButton
                                Width="170"
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Default"
                                attached:ThemeProperties.IconLeft="ui_icon_plus"
                                attached:ThemeProperties.IconRight="lui_icon_none"
                                Content="Add Item" />
                            <controls:LuiButton
                                Width="170"
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Default"
                                attached:ThemeProperties.IconLeft="ui_icon_plus"
                                attached:ThemeProperties.IconRight="lui_icon_triangle_bottom"
                                Content="Add Item" />
                            <controls:LuiButton
                                Width="170"
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Default"
                                attached:ThemeProperties.IconLeft="ui_icon_plus"
                                attached:ThemeProperties.IconRight="lui_icon_none"
                                attached:ThemeProperties.Rounded="True"
                                Content="Add Item" />
                            <controls:LuiButton
                                Width="170"
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Default"
                                attached:ThemeProperties.IconLeft="ui_icon_plus"
                                attached:ThemeProperties.IconRight="lui_icon_triangle_bottom"
                                attached:ThemeProperties.Rounded="True"
                                Content="Add Item" />
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Inverse">
                        <StackPanel
                            Background="{StaticResource LUI.Brush.Grayscale28}"
                            Orientation="Horizontal">
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Default"
                                attached:ThemeProperties.IconLeft="ui_icon_plus"
                                attached:ThemeProperties.IconRight="lui_icon_none"
                                attached:ThemeProperties.Inverted="True" />
                            <controls:LuiButton
                                Width="170"
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Default"
                                attached:ThemeProperties.IconLeft="ui_icon_plus"
                                attached:ThemeProperties.IconRight="lui_icon_none"
                                attached:ThemeProperties.Inverted="True"
                                Content="Add Item" />
                            <controls:LuiButton
                                Width="170"
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Default"
                                attached:ThemeProperties.IconLeft="ui_icon_plus"
                                attached:ThemeProperties.IconRight="lui_icon_triangle_bottom"
                                attached:ThemeProperties.Inverted="True"
                                Content="Add Item" />
                            <controls:LuiButton
                                Width="170"
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Default"
                                attached:ThemeProperties.IconLeft="ui_icon_plus"
                                attached:ThemeProperties.IconRight="lui_icon_none"
                                attached:ThemeProperties.Inverted="True"
                                attached:ThemeProperties.Rounded="True"
                                Content="Add Item" />
                            <controls:LuiButton
                                Width="170"
                                Margin="3,15,3,15"
                                attached:ThemeProperties.ButtonScheme="Default"
                                attached:ThemeProperties.IconLeft="ui_icon_plus"
                                attached:ThemeProperties.IconRight="lui_icon_triangle_bottom"
                                attached:ThemeProperties.Inverted="True"
                                attached:ThemeProperties.Rounded="True"
                                Content="Add Item" />
                        </StackPanel>
                    </TabItem>
                </TabControl>
                <TabControl ItemContainerStyle="{StaticResource LUITabItemStyle}">
                    <TabItem Header="Default">
                        <StackPanel>
                            <controls:LuiButton
                                Margin="3"
                                attached:ThemeProperties.IconLeft="lui_icon_none"
                                attached:ThemeProperties.IconRight="lui_icon_none"
                                Content="Add Item" />
                            <controls:LuiButton
                                Margin="3"
                                attached:ThemeProperties.IconLeft="ui_icon_plus"
                                attached:ThemeProperties.IconRight="lui_icon_none"
                                Content="Add Item" />
                            <controls:LuiButton
                                Margin="3"
                                attached:ThemeProperties.IconLeft="lui_icon_none"
                                attached:ThemeProperties.IconRight="ui_icon_plus"
                                attached:ThemeProperties.Rounded="True"
                                Content="Add Item" />
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Inverse">
                        <StackPanel Background="{StaticResource LUI.Brush.Grayscale28}">
                            <controls:LuiButton
                                Margin="3"
                                attached:ThemeProperties.IconLeft="lui_icon_none"
                                attached:ThemeProperties.IconRight="lui_icon_none"
                                attached:ThemeProperties.Inverted="True"
                                Content="Add Item" />
                            <controls:LuiButton
                                Margin="3"
                                attached:ThemeProperties.IconLeft="ui_icon_plus"
                                attached:ThemeProperties.IconRight="lui_icon_none"
                                attached:ThemeProperties.Inverted="True"
                                Content="Add Item" />
                            <controls:LuiButton
                                Margin="3"
                                attached:ThemeProperties.IconLeft="lui_icon_none"
                                attached:ThemeProperties.IconRight="ui_icon_plus"
                                attached:ThemeProperties.Inverted="True"
                                attached:ThemeProperties.Rounded="True"
                                Content="Add Item" />
                        </StackPanel>
                    </TabItem>
                </TabControl>
                <StackPanel Orientation="Horizontal">
                    <controls:LuiButton
                        Margin="3"
                        attached:ThemeProperties.ButtonSize="Default"
                        attached:ThemeProperties.IconLeft="lui_icon_none"
                        attached:ThemeProperties.IconRight="lui_icon_none"
                        Content="Default" />
                    <controls:LuiButton
                        Margin="3"
                        attached:ThemeProperties.ButtonSize="Large"
                        attached:ThemeProperties.IconLeft="lui_icon_none"
                        attached:ThemeProperties.IconRight="lui_icon_none"
                        Content="Large" />
                    <controls:LuiButton
                        Margin="3"
                        attached:ThemeProperties.ButtonSize="ExtraLarge"
                        attached:ThemeProperties.IconLeft="lui_icon_none"
                        attached:ThemeProperties.IconRight="lui_icon_none"
                        Content="Extra Large" />
                </StackPanel>
                <controls:LuiSeparator Height="3" />
                <StackPanel Orientation="Horizontal">
                    <controls:LuiToggleButton
                        attached:ThemeProperties.IconLeft="lui_icon_none"
                        attached:ThemeProperties.IconRight="lui_icon_triangle_bottom"
                        Content="Toggle" />
                </StackPanel>
            </StackPanel>
        </TabItem>
        <TabItem Header="ButtonGroup">
            <StackPanel>
                <TabControl ItemContainerStyle="{StaticResource LUITabItemStyle}">
                    <TabItem Header="Default">
                        <StackPanel>
                            <controls:LuiControlGroup Margin="3,15,3,15">
                                <controls:LuiButton Content="First Button" />
                                <controls:LuiButton Content="Second Button" />
                                <controls:LuiButton Content="Third Button" />
                            </controls:LuiControlGroup>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Inverse">
                        <StackPanel Background="{StaticResource LUI.Brush.Grayscale28}">
                            <controls:LuiControlGroup Margin="3,15,3,15">
                                <controls:LuiButton
                                    attached:ThemeProperties.Inverted="True"
                                    Content="First Button" />
                                <controls:LuiButton
                                    attached:ThemeProperties.Inverted="True"
                                    Content="Second Button" />
                                <controls:LuiButton
                                    attached:ThemeProperties.Inverted="True"
                                    Content="Third Button" />
                            </controls:LuiControlGroup>
                        </StackPanel>
                    </TabItem>
                </TabControl>

                <TabControl ItemContainerStyle="{StaticResource LUITabItemStyle}">
                    <TabItem Header="Default">
                        <StackPanel>
                            <controls:LuiControlGroup
                                Margin="3,15,3,15"
                                attached:ThemeProperties.Rounded="True">
                                <controls:LuiButton
                                    Width="170"
                                    attached:ThemeProperties.IconRight="lui_icon_info"
                                    Content="First Button" />
                                <controls:LuiButton Content="Second Button" />
                                <controls:LuiButton
                                    attached:ThemeProperties.ButtonScheme="Info"
                                    Content="Third Button" />
                            </controls:LuiControlGroup>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Inverse">
                        <StackPanel Background="{StaticResource LUI.Brush.Grayscale28}">
                            <controls:LuiControlGroup
                                Margin="3,15,3,15"
                                attached:ThemeProperties.Rounded="True">
                                <controls:LuiButton
                                    Width="170"
                                    attached:ThemeProperties.IconRight="lui_icon_info"
                                    attached:ThemeProperties.Inverted="True"
                                    Content="First Button" />
                                <controls:LuiButton
                                    attached:ThemeProperties.Inverted="True"
                                    Content="Second Button" />
                                <controls:LuiButton
                                    attached:ThemeProperties.ButtonScheme="Info"
                                    attached:ThemeProperties.Inverted="True"
                                    Content="Third Button" />
                            </controls:LuiControlGroup>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </TabItem>
        <TabItem Header="Input">
            <StackPanel>
                <TabControl ItemContainerStyle="{StaticResource LUITabItemStyle}">
                    <TabItem Header="Default">

                        <controls:LuiInput
                            Margin="3,15,3,15"
                            Text="{Binding SingleText.Text}" />

                    </TabItem>
                    <TabItem Header="Inverse">
                        <StackPanel Background="{StaticResource LUI.Brush.Grayscale28}">
                            <controls:LuiInput
                                Margin="3,15,3,15"
                                attached:ThemeProperties.Inverted="True" />
                        </StackPanel>
                    </TabItem>
                </TabControl>
                <TabControl ItemContainerStyle="{StaticResource LUITabItemStyle}">
                    <TabItem Header="Default">
                        <controls:LuiInput
                            Margin="3,15,3,15"
                            LabelText="Label" />
                    </TabItem>
                    <TabItem Header="Inverse">
                        <StackPanel Background="{StaticResource LUI.Brush.Grayscale28}">
                            <controls:LuiInput
                                Margin="3,15,3,15"
                                attached:ThemeProperties.Inverted="True"
                                LabelText="Label" />
                        </StackPanel>
                    </TabItem>
                </TabControl>
                <controls:LuiInput
                    Margin="3,15,3,15"
                    LUIInputSize="Default"
                    LabelText="Size Default" />
                <controls:LuiInput
                    Margin="3,15,3,15"
                    LUIInputSize="Large"
                    LabelText="Size Large" />

                <TabControl ItemContainerStyle="{StaticResource LUITabItemStyle}">
                    <TabItem Header="Default">
                        <StackPanel>
                            <controls:LuiInputGroup
                                Margin="3,15,3,15"
                                LeftCommandIcon="lui_icon_calendar"
                                RightCommandIcon="lui_icon_fx"
                                Text="abcd" />
                            <controls:LuiInputGroup
                                Margin="3,15,3,15"
                                LabelText="Label"
                                LeftCommandIcon="lui_icon_none"
                                RightCommandIcon="lui_icon_fx"
                                Text="abcd" />

                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Inverse">
                        <StackPanel Background="{StaticResource LUI.Brush.Grayscale28}">
                            <controls:LuiInputGroup
                                Margin="3,15,3,15"
                                attached:ThemeProperties.Inverted="True"
                                LeftCommandIcon="lui_icon_calendar"
                                RightCommandIcon="lui_icon_fx"
                                Text="abcd" />
                            <controls:LuiInputGroup
                                Margin="3,15,3,15"
                                attached:ThemeProperties.Inverted="True"
                                LabelText="Label"
                                LeftCommandIcon="lui_icon_none"
                                RightCommandIcon="lui_icon_fx"
                                Text="abcd" />
                        </StackPanel>
                    </TabItem>
                </TabControl>






            </StackPanel>
        </TabItem>
        <TabItem Header="Search">
            <TabControl ItemContainerStyle="{StaticResource LUITabItemStyle}">
                <TabItem Header="Default">
                    <StackPanel>
                        <controls:LuiSearch
                            Margin="3,15,3,15"
                            Command="{Binding TestCommand}"
                            CommandParameter="TestWert" />
                    </StackPanel>
                </TabItem>
                <TabItem Header="Inverse">
                    <StackPanel Background="{StaticResource LUI.Brush.Grayscale28}">
                        <controls:LuiSearch
                            Margin="3,15,3,15"
                            attached:ThemeProperties.Inverted="True" />
                    </StackPanel>
                </TabItem>
            </TabControl>
        </TabItem>
        <TabItem Header="CheckBox">
            <TabControl ItemContainerStyle="{StaticResource LUITabItemStyle}">
                <TabItem Header="Default">
                    <StackPanel>
                        <controls:LuiCheckbox
                            Margin="3,15,3,3"
                            Content="Label" />
                        <controls:LuiCheckbox
                            Margin="3,3,3,3"
                            Content="Label"
                            IsChecked="True" />
                        <controls:LuiCheckbox
                            Margin="3,3,3,3"
                            Content="Label"
                            IsEnabled="False" />
                        <controls:LuiCheckbox
                            Margin="3,3,3,15"
                            Content="Label"
                            IsChecked="True"
                            IsEnabled="False" />
                    </StackPanel>
                </TabItem>
                <TabItem Header="Inverse">
                    <StackPanel Background="{StaticResource LUI.Brush.Grayscale28}">
                        <controls:LuiCheckbox
                            Margin="3,15,3,3"
                            attached:ThemeProperties.Inverted="True"
                            Content="Label" />
                        <controls:LuiCheckbox
                            Margin="3,3,3,3"
                            attached:ThemeProperties.Inverted="True"
                            Content="Label"
                            IsChecked="True" />
                        <controls:LuiCheckbox
                            Margin="3,3,3,3"
                            attached:ThemeProperties.Inverted="True"
                            Content="Label"
                            IsChecked="False"
                            IsEnabled="false" />
                        <controls:LuiCheckbox
                            Margin="3,3,3,15"
                            attached:ThemeProperties.Inverted="True"
                            Content="Label"
                            IsChecked="True"
                            IsEnabled="false" />
                    </StackPanel>
                </TabItem>
            </TabControl>
        </TabItem>

        <TabItem Header="Radiobutton">
            <TabControl ItemContainerStyle="{StaticResource LUITabItemStyle}">
                <TabItem Header="Default">
                    <StackPanel>
                        <controls:LuiRadioButton Content="First Button" />
                        <controls:LuiRadioButton
                            Content="Second Button"
                            IsChecked="True" />
                        <controls:LuiRadioButton
                            Content="Third Button"
                            IsEnabled="False" />
                        <controls:LuiRadioButton
                            Content="Fourth Button"
                            IsChecked="True"
                            IsEnabled="False" />
                    </StackPanel>

                </TabItem>
                <TabItem Header="Inverse">
                    <StackPanel Background="{StaticResource LUI.Brush.Grayscale28}">
                        <controls:LuiRadioButton
                            Margin="3,3,0,0"
                            attached:ThemeProperties.Inverted="True"
                            Content="First Button" />
                        <controls:LuiRadioButton
                            Margin="3,3,0,0"
                            attached:ThemeProperties.Inverted="True"
                            Content="Second Button"
                            IsChecked="True" />
                        <controls:LuiRadioButton
                            Margin="3,3,0,0"
                            attached:ThemeProperties.Inverted="True"
                            Content="Third Button"
                            IsEnabled="False" />
                        <controls:LuiRadioButton
                            Margin="3,3,0,0"
                            attached:ThemeProperties.Inverted="True"
                            Content="Fourth Button"
                            IsChecked="True"
                            IsEnabled="False" />
                    </StackPanel>
                </TabItem>
            </TabControl>
        </TabItem>

        <TabItem Header="Combobox">
            <TabControl ItemContainerStyle="{StaticResource LUITabItemStyle}">
                <TabItem Header="Default">
                    <StackPanel>
                        <controls:LuiCombobox
                            Margin="5"
                            LabelText="Label">

                            <ComboBoxItem>First</ComboBoxItem>
                            <ComboBoxItem>Second</ComboBoxItem>
                            <ComboBoxItem>Third</ComboBoxItem>
                        </controls:LuiCombobox>
                        <controls:LuiCombobox
                            Margin="5"
                            attached:ThemeProperties.Gradient="True"
                            LabelText="Label">
                            <ComboBoxItem>First</ComboBoxItem>
                            <ComboBoxItem>Second</ComboBoxItem>
                            <ComboBoxItem>Third</ComboBoxItem>
                        </controls:LuiCombobox>
                    </StackPanel>

                </TabItem>
                <TabItem Header="Inverse">
                    <StackPanel Background="{StaticResource LUI.Brush.Grayscale28}">
                        <controls:LuiCombobox
                            Margin="5"
                            attached:ThemeProperties.Inverted="True"
                            LabelText="Label">
                            <ComboBoxItem>First</ComboBoxItem>
                            <ComboBoxItem>Second</ComboBoxItem>
                            <ComboBoxItem>Third</ComboBoxItem>
                        </controls:LuiCombobox>
                        <controls:LuiCombobox
                            Margin="5"
                            attached:ThemeProperties.Gradient="True"
                            attached:ThemeProperties.Inverted="True"
                            LabelText="Label">
                            <ComboBoxItem>First</ComboBoxItem>
                            <ComboBoxItem>Second</ComboBoxItem>
                            <ComboBoxItem>Third</ComboBoxItem>
                        </controls:LuiCombobox>
                    </StackPanel>
                </TabItem>
