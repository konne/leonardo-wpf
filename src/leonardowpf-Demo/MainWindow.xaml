                                Margin="3,15,3,15"
                                ButtonText="Add Item"
                                IconLeft="ui_icon_plus"
                                IconRight="lui_icon_triangle_bottom"
                                Inverse="True"
                                LUIScheme="Default" />
                            <controls:LuiButton
                                Width="170"
                                Margin="3,15,3,15"
                                ButtonText="Add Item"
                                IconLeft="ui_icon_plus"
                                IconRight="lui_icon_none"
                                Inverse="True"
                                LUIScheme="Default"
                                Rounded="True" />
                            <controls:LuiButton
                                Width="170"
                                Margin="3,15,3,15"
                                ButtonText="Add Item"
                                IconLeft="ui_icon_plus"
                                IconRight="lui_icon_triangle_bottom"
                                Inverse="True"
                                LUIScheme="Default"
                                Rounded="True" />
                        </StackPanel>
                    </TabItem>
                </TabControl>
                <TabControl
                    ItemContainerStyle="{StaticResource LUITabItemStyle}">
                    <TabItem
                        Header="Default">
                        <StackPanel>
                            <controls:LuiButton
                                Margin="3"
                                ButtonText="Add Item"
                                IconLeft="lui_icon_none"
                                IconRight="lui_icon_none" />
