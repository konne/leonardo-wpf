                                IconRight="lui_icon_none"
                                Inverse="True"
                                LUIScheme="Success"
                                Rounded="True" />
                        </StackPanel>
                    </TabItem>
                </TabControl>
                <TabControl
                    ItemContainerStyle="{StaticResource LUITabItemStyle}">
                    <TabItem
                        Header="Default">
                        <StackPanel
                            Orientation="Horizontal">
                            <controls:LuiButton
                                Margin="3,15,3,15"
                                IconLeft="ui_icon_plus"
                                IconRight="lui_icon_none"
                                LUIScheme="Default" />
                            <controls:LuiButton
                                Width="170"
                                Margin="3,15,3,15"
                                ButtonText="Add Item"
                                IconLeft="ui_icon_plus"
                                IconRight="lui_icon_none"
                                LUIScheme="Default" />
                            <controls:LuiButton
                                Width="170"
                                Margin="3,15,3,15"
                                ButtonText="Add Item"
                                IconLeft="ui_icon_plus"
                                IconRight="lui_icon_triangle_bottom"
                                LUIScheme="Default" />
                            <controls:LuiButton
                                Width="170"
                                Margin="3,15,3,15"
                                ButtonText="Add Item"
