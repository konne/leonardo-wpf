                        <controls:LuiCheckbox
                            Margin="3,3,3,15"
                            Content="Label"
                            IsChecked="True"
                            IsEnabled="False" />
                    </StackPanel>
                </TabItem>
                <TabItem
                    Header="Inverse">
                    <StackPanel
                        Background="{StaticResource LUI.Brush.Grayscale28}">
                        <controls:LuiCheckbox
                            Margin="3,15,3,3"
                            attached:ThemeProperties.Inverted="True"
                            Content="Label" />
                        <controls:LuiCheckbox
                            Margin="3,3,3,3"
                            attached:ThemeProperties.Inverted="True"
                            Content="Label"
                            IsChecked="True" />
                        <controls:LuiCheckbox
                            Margin="3,3,3,3"
                            attached:ThemeProperties.Inverted="True"
                            Content="Label"
                            IsChecked="False"
                            IsEnabled="false" />
                        <controls:LuiCheckbox
                            Margin="3,3,3,15"
                            attached:ThemeProperties.Inverted="True"
                            Content="Label"
                            IsChecked="True"
                            IsEnabled="false" />
                    </StackPanel>
                </TabItem>
