        <TabItem Header="Switch">
            <TabControl ItemContainerStyle="{StaticResource LUITabItemStyle}">
                <TabItem Header="Default">
                    <StackPanel>
                        <controls:LuiSwitch Margin="5" />

                    </StackPanel>

                </TabItem>
                <TabItem Header="Inverse">
                    <StackPanel Background="{StaticResource LUI.Brush.Grayscale28}">
                        <controls:LuiSwitch
                            Margin="5"
                            attached:ThemeProperties.Inverted="True" />

                    </StackPanel>
                </TabItem>
            </TabControl>
        </TabItem>

        <TabItem Header="Dialog">
            <StackPanel>
                <controls:LuiDialog
                    IsOpen="{Binding IsChecked, ElementName=BLeft}"
                    PanelHeight="60"
                    PanelWidth="60"
                    Placement="Left"
                    PlacementTarget="{Binding ElementName=BLeft}">
                    <TextBlock Text="put Context Here" />
                </controls:LuiDialog>
                <ToggleButton
                    x:Name="BLeft"
                    Width="100"
                    Height="100"
                    Content="Left" />
                <ToggleButton
                    x:Name="BTop"
                    Width="100"
                    Height="100"
                    Content="Top" />
                <controls:LuiDialog
                    IsOpen="{Binding IsChecked, ElementName=BTop}"
                    PanelHeight="50"
                    PanelWidth="50"
                    Placement="Top"
                    PlacementTarget="{Binding ElementName=BTop}">
                    <TextBlock Text="put Context Here" />
                </controls:LuiDialog>
                <Grid>
                    <ToggleButton
                        x:Name="BRight"
                        Width="100"
                        Height="100"
                        HorizontalAlignment="Center"
                        Content="Right" />
                </Grid>
                <controls:LuiDialog
                    IsOpen="{Binding IsChecked, ElementName=BRight}"
                    PanelHeight="40"
                    PanelWidth="150"
                    Placement="Right"
                    PlacementTarget="{Binding ElementName=BRight}">
                    <TextBlock Text="put Context Here" />
                </controls:LuiDialog>
                <ToggleButton
                    x:Name="BBottom"
                    Width="100"
                    Height="100"
                    Content="Bottom" />
                <controls:LuiDialog
                    IsOpen="{Binding IsChecked, ElementName=BBottom}"
                    PanelHeight="150"
                    PanelWidth="150"
                    Placement="Bottom"
                    PlacementTarget="{Binding ElementName=BBottom}">
                    <TextBlock Text="put Context Here" />
                </controls:LuiDialog>
                <ToggleButton
                    x:Name="BMouse"
                    Width="80"
                    Height="80"
                    Content="Mouse" />
                <controls:LuiDialog
                    IsOpen="{Binding IsChecked, ElementName=BMouse}"
                    PanelHeight="150"
                    PanelWidth="150"
                    Placement="MousePoint"
                    PlacementTarget="{Binding ElementName=BMouse}">
                    <TextBlock Text="put Context Here" />
                </controls:LuiDialog>
            </StackPanel>
        </TabItem>
        <TabItem Header="Accordion">
            <StackPanel x:Name="sp">
                <StackPanel.Resources>
                    <Style x:Key="{x:Type local:TestControl}" />
                    <Style
                        x:Key="aa"
                        BasedOn="{StaticResource LUI_MainAccordionItemStyle}"
                        TargetType="controls:LuiAccordionItem">
                        <Setter Property="controls:LuiAccordionItem.Header" Value="{Binding HeaderText}" />
                        <Setter Property="controls:LuiAccordionItem.Content" Value="{Binding Text}" />
                    </Style>

                    <Style
                        x:Key="bb"
                        BasedOn="{StaticResource LUI_MainAccordionItemStyle}"
                        TargetType="controls:LuiAccordionItem">
                        <Setter Property="controls:LuiAccordionItem.Header" Value="{Binding LabelText}" />
                        <Setter Property="controls:LuiAccordionItem.Content" Value="{Binding}" />
                    </Style>

                    <Style
                        x:Key="cc"
                        BasedOn="{StaticResource LUI_MainAccordionItemStyle}"
                        TargetType="controls:LuiAccordionItem">
                        <Setter Property="controls:LuiAccordionItem.Header" Value="{Binding Header}" />
                        <Setter Property="controls:LuiAccordionItem.Content" Value="{Binding Content}" />
                    </Style>


                    <converter:TypeToStyleSelector
                        x:Key="TypeToStyleSelector"
                        DefaultStyle="{StaticResource aa}"
                        ItemStyle1="{StaticResource aa}"
                        ItemStyle2="{StaticResource bb}"
                        ItemStyle3="{StaticResource cc}"
                        ItemType1="{x:Type local:testclass}"
                        ItemType2="{x:Type local:TestControl}"
                        ItemType3="{x:Type controls:LuiAccordionItem}" />


                </StackPanel.Resources>


                <Button
                    Height="40"
                    Click="Button_Click_1"
                    Content="Add" />

                <controls:LuiAccordion
                    x:Name="Accordion"
                    CollapseAllOnExpandSingle="True"
                    IsDragDropEnabled="True"
                    ItemContainerStyleSelector="{StaticResource TypeToStyleSelector}"
                    ItemsSource="{Binding TextList}"
                    Loaded="Button_Loaded">
                    <!--<local:TestControl LabelText="erster" />
                    <local:TestControl LabelText="zweiter" />-->
                    <!--<controls:LuiAccordionItem
                        Content="Inhalt"
                        Header="erstes" />
                    <controls:LuiAccordionItem
                        Content="Inhalt"
                        Header="zweites" />-->
                </controls:LuiAccordion>

            </StackPanel>
        </TabItem>
    </TabControl>
</Window>
