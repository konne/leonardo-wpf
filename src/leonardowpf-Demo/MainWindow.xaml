        <TabItem
            Header="Input">
            <StackPanel>
                <TabControl
                    ItemContainerStyle="{StaticResource LUITabItemStyle}">
                    <TabItem
                        Header="Default">

                        <controls:LuiInput
                            Margin="3,15,3,15"
                            InputText="{Binding SingleText.Text}" />

                    </TabItem>
                    <TabItem
                        Header="Inverse">
                        <StackPanel
                            Background="{StaticResource LUI.Brush.Grayscale28}">
                            <controls:LuiInput
                                Margin="3,15,3,15"
                                Inverse="True" />
                        </StackPanel>
                    </TabItem>
                </TabControl>
                <TabControl
                    ItemContainerStyle="{StaticResource LUITabItemStyle}">
                    <TabItem
                        Header="Default">
                        <controls:LuiInput
                            Margin="3,15,3,15"
                            LabelText="{Binding SingleText.Text}" />
                    </TabItem>
                    <TabItem
                        Header="Inverse">
                        <StackPanel
                            Background="{StaticResource LUI.Brush.Grayscale28}">
                            <controls:LuiInput
                                Margin="3,15,3,15"
                                Inverse="True"
                                LabelText="Label" />
                        </StackPanel>
                    </TabItem>
                </TabControl>
                <controls:LuiInput
                    Margin="3,15,3,15"
                    LUIInputSize="Default"
                    LabelText="Label" />
                <controls:LuiInput
                    Margin="3,15,3,15"
                    LUIInputSize="Large"
                    LabelText="Label" />
            </StackPanel>
        </TabItem>
        <TabItem
            Header="Search">
            <TabControl
